<h2 class="text-center">Lastest posts</h2>

  <% @posts.each do |post| %>
    <div class="post">
      <h3><%= link_to post.header, post %></h3>
      <% if post.image.present? %>
        <div class="pull-left" style='max-width: 250px; max-height: 200px; margin-right: 20px; margin-bottom: 20px;'>
          <%= image_tag post.image, class: "img-polaroid" %>
        </div>
      <%end%>
      <div class='preview'><%= raw markdown.render(post.body.split("\n")[0]) %></div>
      <div class='row-fluid'>
        <div class="span6">
          <%= link_to "@#{post.user.username}", posts_url(author: post.user.username) %>
          <span><%= post.created_at %></span>
          <p><%= post.comments.count%> комментариев.</p>
          <% post.tag_list.each do |t| %>
           <span class="label label-success"><%=link_to t, tag_path(t), class: 'white' %></span>
          <% end %>
        </div>
        <div class="span6">
          <ul class='inline pull-right'>
            <li><%= link_to 'Show', post, class: 'btn btn-primary' %></li>
            <% if can? :update, post %>
              <li><%= link_to 'Edit', edit_post_path(post), class: 'btn btn-success' %></li>
            <% end %>
            <% if can? :destroy, post %>
              <li><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></li>
            <% end %>  
          </ul>
        </div>
      </div>
        <hr>
    </div>   
  <% end %>

<%= will_paginate @posts %>