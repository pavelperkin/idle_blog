<div class="navbar navbar-static-top navbar-inverse">
  <div class="navbar-inner">
    <%= link_to 'IdleBlog', root_path, class: 'brand' %>
      <ul class="nav pull-right" id="loginbar">
        <% if user_signed_in? %>
          <% if can? :create, Post %>
            <li class='nav_item'><%= link_to t('links.new_post'), new_post_path %></li>
          <% end %>
          <% if can? :update, User %>
            <li class='nav_item'><%= link_to t('links.users'), users_path %></li>
          <% end %>
          <li class='nav_item'><%= link_to t('links.sign_out'), destroy_user_session_path %></li>
        <% else %>
          <li class='nav_item'><%= link_to t('links.sign_in'), new_user_session_path %></li>
          <li class='nav_item'><%= link_to t('links.sign_up'), new_user_registration_path %></li>
        <% end %>
      </ul>
  </div>
</div>